<% let user=data.user %>
<div class="container mt-5 form-control-sm ">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="mx-auto">Cập nhật thông tin</h1>
        <form action="/update-user" style="max-width: 550px;" class="mx-auto" method="post">
          <!-- Tài khoản -->
          <div class="mb-3">
            <label for="username" class="form-label">Tài khoản:</label>
            <input type="text" class="form-control" id="username" value="<%= user.username %>" name="username" readonly >
          </div>
          <!-- Tên -->
          <div class="mb-3">
            <label for="name" class="form-label">Tên:</label>
            <input type="text" class="form-control" id="name" value="<%= user.fullname %>" name="fullname" required>
          </div>
  
          <!-- Giới tính -->
          <div class="mb-3">
            <label for="gender" class="form-label">Giới tính:</label>
            <select class="form-select" id="gender" name="sex" required>
              <option value="Nam">Nam</option>
              <option value="Nu">Nữ</option>
            </select>
          </div>
  
          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" value="<%= user.email %>" name="email" disabled>
          </div>
  
          <!-- Địa chỉ -->
          <div class="mb-3">
            <label for="address" class="form-label">Địa chỉ:</label>
            <textarea class="form-control" id="address" name="address"  rows="3" required><%= user.address %></textarea>
          </div>
  
          <!-- Quyền -->
          <div class="mb-3">
            <label for="role" class="form-label">Quyền:</label>
            <input type="email" class="form-control" id="role" value="<%= user.role %>" name="role" disabled>
          </div>
          <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
      </div>
    </div>
  </div>